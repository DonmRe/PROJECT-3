                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
              </select>
            </div>
        <!-- previously had users input rating by typing anything -->
        <!-- <div class="form-group">
          <label>Readability:</label>
          <input type="text" name='readability' value="<%= api.readability %>" id="api-readability" placeholder="Rate 1 - 5" class="form-control">
        </div> -->
<!-- forces users to choose from 1-5 but will not remember their previous input -->        <label>Technicality:</label>
              <select class="form-control" id="api-technicality" name="technicality" value="<%- api.technicality %>">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
              </select>
            </div>
        <!-- previously had users input rating by typing anything -->
