<!DOCTYPE html>
<html>
  <head>
    <%- include ../partials/head  %>
  </head>
  <body>
    <%- include ../partials/header %>

    <div class="container">

          <div id="profileName"><%= userProfile.local.name %></div>
          <a href="/users/<%- userProfile._id%>/edit" id="editUser">Edit</a>
              <br>
              <div class="profileTitles"><label class="profileText">Experience Level: </label>
                <p class="indent"><%= userProfile.expLevel %></div></p>
              <div class="profileTitles"><label class="profileText">Contact Info: </label>
                <p class="indent"><%= userProfile.local.email %></div></p>
              <div class="profileTitles"><label class="profileText">Favorites: </label>
                <p class="indent"><% userProfile.favorites.forEach(function(favorite) {  %></p>
                <p class="indent3"><%= "-" + favorite.name + " : " + favorite.category %></p>

                <p class="indent2"><%= "Url : " + favorite.url %></p>
                <p class="indent2"><%= "About : " + favorite.about %></p>

              <%  }) %>
            </div>

            <br>
            <br>
            <br>

          <a href="/" id="backUser">Back</a>

    </div>
    <%- include ../partials/footer %>
  </body>
</html>
